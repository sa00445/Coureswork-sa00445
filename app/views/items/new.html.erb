<%= form_for @item do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div>
  <%= f.label :price %>
  <%= f.number_field :price, class: :text_field, step: :any %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>

